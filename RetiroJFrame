    private void jbtnRetirarActionPerformed(java.awt.event.ActionEvent evt) {                                            
  try {

    Conexion conn = new Conexion();
    Connection con = conn.getConexion();

    PreparedStatement ps = con.prepareStatement(
        "UPDATE cuenta SET saldo = saldo - ? WHERE idcuenta = 1"
    );

    ps.setString(1, jtfMonto.getText());

    int res = ps.executeUpdate();

    if (res > 0) {
        JOptionPane.showMessageDialog(null, "Retiro exitoso");

        int opcion = JOptionPane.showConfirmDialog(null, "¿Deseas realizar otro retiro?", "Confirmación", JOptionPane.YES_NO_OPTION);

        if (opcion == JOptionPane.YES_OPTION) {
            jtfMonto.setText("");
            return;
        } else {
            this.dispose();
  
        }

    } else {
        JOptionPane.showMessageDialog(null, "Error al realizar el retiro");
    }

    con.close();

} catch (Exception e) {
    JOptionPane.showMessageDialog(null, "Error: " + e.getMessage());
}
    }                                           

