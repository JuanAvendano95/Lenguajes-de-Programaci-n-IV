    private void jbtnContinuarActionPerformed(java.awt.event.ActionEvent evt) {                                              
try {
    String opcion = jtfOpcion.getText();
    int opc = Integer.parseInt(opcion);

    switch (opc) {
        case 1:
            DepositoJFrame deposito = new DepositoJFrame();
            deposito.setVisible(true); 
            break;

        case 2:
            RetiroJFrame retiro = new RetiroJFrame();
            retiro.setVisible(true);
            break;

        case 3:
            SaldoJFrame saldo = new SaldoJFrame();
            saldo.setVisible(true); 
            break;

        default:
            JOptionPane.showMessageDialog(null,"Cerrando sesión, vuelva pronto...","Aviso",JOptionPane.INFORMATION_MESSAGE);
this.dispose();

    }

} catch (Exception e) {
    JOptionPane.showMessageDialog(null, "Error: Ingrese una opción numérica válida." + e);
}

    }                                             

