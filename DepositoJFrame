    private void jbtnDepositarActionPerformed(java.awt.event.ActionEvent evt) {                                              
        
   try {

    Conexion conn = new Conexion();
    Connection con = conn.getConexion();

    PreparedStatement ps = con.prepareStatement(
        "UPDATE cuenta SET saldo = saldo + ? WHERE idcuenta = 1"
    );

    ps.setString(1, jtfCantidad.getText());

    int res = ps.executeUpdate();

    if (res > 0) {
        JOptionPane.showMessageDialog(null, "Depósito exitoso");

        int opcion = JOptionPane.showConfirmDialog(null, "¿Deseas realizar otro depósito?", "Confirmación", JOptionPane.YES_NO_OPTION);

        if (opcion == JOptionPane.YES_OPTION) {
            jtfCantidad.setText("");
            return;
        } else {
            this.dispose();
        }

    } else {
        JOptionPane.showMessageDialog(null, "Error al depositar");
    }

    con.close();

} catch (Exception e) {
    JOptionPane.showMessageDialog(null, "Error: " + e.getMessage());
}


    }                                             

