    private void jbtnAceptarActionPerformed(java.awt.event.ActionEvent evt) {                                            
String peso = jtfPeso.getText();
String estatura = jtfEstatura.getText();

float p = Float.parseFloat(peso);
float e = Float.parseFloat(estatura);
 
float imc = p / (e*e);

if(imc < 18.5){
    JOptionPane.showMessageDialog(null, "IMC: " + imc + "\nClasificación: BAJO PESO");
} else if(imc >= 18.5 && imc <= 24.5){
    JOptionPane.showMessageDialog(null, "IMC: " + imc + "\nClasificación: NORMAL");
} else if(imc >= 25 && imc <= 29.9) {
    JOptionPane.showMessageDialog(null, "IMC: " + imc + "\nClasificación: SOBREPESO");
} else if(imc >= 30 && imc <= 34.9) {
    JOptionPane.showMessageDialog(null, "IMC: " + imc + "\nClasificación: OBESIDAD I");
} else if(imc >= 35 && imc <= 39.9) {
    JOptionPane.showMessageDialog(null, "IMC: " + imc + "\nClasificación: OBESIDAD II");
} else { // Este `else` captura todos los valores de IMC >= 40.0
    JOptionPane.showMessageDialog(null, "IMC: " + imc + "\nClasificación: OBESIDAD III");
}

jtfPeso.setText("");
jtfEstatura.setText("");

    }                                           

